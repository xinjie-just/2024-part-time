<layout>
  <view class="page">
    <view class="title">{{ detail.title }}</view>
    <view class="content">
      <rich-text nodes="{{detail.introduction}}"></rich-text>
    </view>
    <view class="buy-btn" bind:tap="onToSelectPaymentMethod">0 元购</view>
    <payment-method wx:if="{{ paymentMethodShow }}" price="{{detail.price}}" productId="{{detail.id}}" bind:close="onClose" bind:confirm="onConfirm" />
    <van-toast id="van-toast" />
  </view>
</layout>