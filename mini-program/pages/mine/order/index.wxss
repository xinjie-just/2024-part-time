.page {
  box-sizing: border-box;
  height: 100vh;
  padding: 16rpx;
  background-color: #f1f1f1;
  display: flex;
  flex-direction: column;
}

.list {
  background-color: #fff;
  padding-right: 24rpx;
  padding-left: 24rpx;
  flex: 1;
  overflow-y: auto;
  border-radius: 8rpx;
}

.item {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.6em;
  margin-right: 1em;
  word-break: break-all;
}

.img {
  min-width: 128rpx;
  max-width: 128rpx;
  height: 128rpx;
}