/* pages/payment/digital-guessing/index.wxss */
.page {
  padding-bottom: 32rpx;
}

.desc {
  margin-top: 16rpx;
}

.card {
  margin: 32rpx 16rpx;
  border: 1px solid #f9f9f9;
  box-shadow: 0 0 2rpx 4rpx rgba(220, 220, 220, 0.15);
  border-radius: 16rpx;
  padding: 32rpx;
}

.card .title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.card .body {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  border: 1px solid #f1f1f1;
  border-radius: 8rpx;
}

.card .item {
  line-height: 56rpx;
  text-align: center;
  flex: 1;
}

.card .item:not(:last-of-type) {
  border-right: 1px solid #f1f1f1;
}

.footer {
  margin-top: 56rpx;
  padding-right: 32rpx;
  padding-left: 32rpx;
}