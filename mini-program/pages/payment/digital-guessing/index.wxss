.page {
  padding-bottom: 32rpx;
}

.desc {
  margin-top: 16rpx;
}

.card {
  margin: 32rpx 16rpx;
  border: 1px solid #f9f9f9;
  box-shadow: 0 0 2rpx 4rpx rgba(220, 220, 220, 0.15);
  border-radius: 16rpx;
  padding: 32rpx;
}

.card .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.card .body {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  border: 1px solid #f1f1f1;
  border-radius: 8rpx;
}

.right-answer {
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.right-answer .result {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.right-answer .result-tag {
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.right-answer .waiting-guess {
  background-color: #fafafa;
  color: rgba(0, 0, 0, 0.88);
  border: 1rpx solid #d9d9d9;
}

.right-answer .not-guess {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.right-answer .guess {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.card .item {
  line-height: 56rpx;
  height: 56rpx;
  text-align: center;
  flex: 1;
}

.card .item:not(:last-of-type) {
  border-right: 1px solid #f1f1f1;
}

.footer {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 56rpx;
  padding-right: 32rpx;
  padding-left: 32rpx;
}

.footer .van-button {
  width: 240rpx;
}

.match-tips {
  padding: 32rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #1989fa;
  background: #ecf9ff;
  display: flex;
  align-items: center;
}

.match-tips .text {
  margin-left: 16rpx;
}

.result-tips {
  margin-bottom: 48rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 1.6em;
  padding: 16rpx 24rpx;
}

.result-tips.success {
  color: #b7eb8f;
  background-color: #f6ffed;
}

.result-tips.fail {
  color: #ed6a0c;
  background-color: #fffbe8;
}