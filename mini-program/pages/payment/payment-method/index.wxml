<!-- 选择支付方式。入口方式一：许愿-投下硬币；入口方式二：0 元购-没有猜中数字竞猜-花钱购买商品 -->
<view class="page">
  <view class="tips">请选择支付方式</view>
  <van-radio-group value="{{ radio }}" bind:change="onChange">
    <van-cell-group>
      <van-cell title="积分" clickable data-name="point" bind:click="onClick">
        <van-radio slot="right-icon" name="point" />
      </van-cell>
      <van-cell title="余额" clickable data-name="balance" bind:click="onClick">
        <van-radio slot="right-icon" name="balance" />
      </van-cell>
      <van-cell title="微信" clickable data-name="wechat" bind:click="onClick">
        <van-radio slot="right-icon" name="wechat" />
      </van-cell>
    </van-cell-group>
  </van-radio-group>
  <view class="footer">
    <van-button plain hairline round type="info" bind:click="onGoBack">返回</van-button>
    <van-button round type="info" bind:click="onConfirm">确定</van-button>
  </view>
  <van-toast id="van-toast" />
</view>